{
    "name": "SF轻小说",
    "url": "book.sfacg.com",
    "category": 3,
    "version": 100,
    "search": {
        "url": "http://s.sfacg.com/?Key=${key}&S=1&SS=0",
        "charset": "utf-8",
        "list": "ul",
        "name": "li:nth-child(2) > strong",
        "author": "li:nth-child(2)@match->(?<=综合信息： )(.+)(?=/[0-9]{4}/)",
        "cover": "img",
        "summary": "li:nth-child(2)@match->(?<=:[0-9]{2} )(.+)",
        "detail": "li:nth-child(2) > strong > a"
    },
    "detail": {
        "name": ".title > span:nth-child(1)",
        "author": ".author-name",
        "cover": ".left-part > .figure > .pic > a > img",
        "summary": ".introduce", 
        "status": ".count-detail > div:nth-child(1) > span:nth-child(2)@match->(?<=[)(.+)(?=])",
        "update": ".count-detail > div:nth-child(2) > span@match->(?<=更新：)(.+)",
        "lastChapter": ".chapter-info > h3 > a",
        "catalog": ".btn-row > a:nth-child(1)@attr->href"
    },
    "catalog": {
        "list": ".story-catalog",
        "orderBy": 0,
        "booklet": {
            "name": ".catalog-title@match->(?<=】 )(.+)",
            "list": "li"
        },
        "name": "a@attr->title",
        "chapter": "a@attr->href"
    },
    "chapter": {
        "content": ".article-content"
    },
    "auth": {
        "login": "https://passport.sfacg.com/Login.aspx",
        "cookie": "sfacg.com",
        "verify": "https://passport.sfacg.com/",
        "logged": "#UserInfo > a:nth-child(4)@equal->退出",
        "vip": "#article > .pay-section > .pay-bar > p.text@equal->本书以下章节需要付费阅读，请支持作者的汗血耕耘！",
        "buy": "#orderSingle@equal->订阅本章"
    },
