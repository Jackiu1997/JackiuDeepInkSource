{
    "name": "轻之文库",
    "url": "www.linovel.net",
    "version": 100,
    "search": {
        "url": "https://www.linovel.net/search/?kw=${key}",
        "charset": "utf-8",
        "list": ".search-book",
        "name": ".book-name",
        "author": ".book-extra@match->(.+)(?= 丨)",
        "cover": ".book-cover > img",
        "summary": ".book-intro",
        "detail": "a"
    },
    "detail": {
        "name": ".book-title",
        "author": ".novelist > .name > a",
        "cover": ".book-cover > a > img",
        "summary": ".about-text",
        "status": ".book-data > span:nth-child(7)",
        "update": ".book-last-update@match->(?<=更新于)(.+)",
        "lastChapter": "",
        "catalog": "${url}#catalog"
    },
    "catalog": {
        "list": ".section-list > div",
        "orderBy": 0,
        "booklet": {
            "name": ".volume-title",
            "list": ".chapter"
        },
        "name": "a",
        "chapter": "a@attr->href"
    },
    "chapter": {
        "content": ".article-text > p"
    },
    "rank": [
        {
            "title":"重推榜",
            "url": "https://www.linovel.net/hub/getTopBooks?unit=zt&page=${page}&time=${key}",
            "page": 1,
            "size": 10,
            "categories": [
                {"key": "week", "value": "周排行"}, {"key": "month", "value": "月排行"}, {"key": "new", "value": "新书排行"}
            ],
            "list": "$..books[*]",
            "name": "$.name",
            "author": "$.author",
            "cover": "$.coverUrl",
            "summary": "$.about",
            "detail": "https://www.linovel.net/book/${$.id}.html"
        },
        {
            "title":"佳作榜",
            "url": "https://www.linovel.net/hub/getTopBooks?unit=jz&page=${page}&time=${key}",
            "page": 1,
            "size": 10,
            "categories": [
                {"key": "week", "value": "周排行"}, {"key": "month", "value": "月排行"}, {"key": "new", "value": "新书排行"}
            ],
            "list": "$..books[*]",
            "name": "$.name",
            "author": "$.author",
            "cover": "$.coverUrl",
            "summary": "$.about",
            "detail": "https://www.linovel.net/book/${$.id}.html"
        },
        {
            "title":"月票榜",
            "url": "https://www.linovel.net/hub/getTopBooks?unit=ticket&page=${page}&time=${key}",
            "page": 1,
            "size": 10,
            "categories": [
                {"key": "week", "value": "周排行"}, {"key": "month", "value": "月排行"}, {"key": "new", "value": "新书排行"}
            ],
            "list": "$..books[*]",
            "name": "$.name",
            "author": "$.author",
            "cover": "$.coverUrl",
            "summary": "$.about",
            "detail": "https://www.linovel.net/book/${$.id}.html"
        }
    ]
}