{
    "name": "ESJ轻小说",
    "url": "www.esjzone.cc",
    "version": 100,
    "search": {
        "url": "https://www.esjzone.cc/tags/${key}/",
        "charset": "utf-8",
        "list": ".product-list-inline-small > div",
        "name": ".caption > div:nth-child(1)",
        "author": "",
        "cover": ".coverMask > a > img",
        "detail": ".caption > div:nth-child(1) > a"
    },
    "detail": {
        "name": ".container > div:nth-child(4) > div > h3",
        "author": ".book-detail ul.nav-list > li:nth-child(1) > span > a",
        "cover": ".coverMask-detail > a > img",
        "summary": ".book_description",
        "status": "",
        "update": ".book-detail ul.nav-list > li:nth-child(3) > span",
        "lastChapter": "#tab1 > a:last-child",
        "catalog": ""
    },
    "catalog": {
        "list": "#tab1 > a",
        "orderBy": 0,
        "name": "a",
        "chapter": "a@attr->href"
    },
    "chapter": {
        "content": ".forum-content",
        "filter": [
            "@p.t"
        ]
    }
}